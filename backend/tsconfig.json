{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": false,
    "target": "ESNext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.json", "src/app.ts", "src/index.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/test/**/*"],
  "files": ["node_modules/@types/node/index.d.ts"]
}
